<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- When true, 5 level signal bar is shown in status bar -->
    <bool name="config_signalStrengthExt">true</bool>

    <!-- When true, setting of preferred rat is allowed -->
    <bool name="config_set_preferred_rat_allowed">false</bool>

    <!-- When true, operator name display is customzied -->
    <bool name="config_customize_operator_name_display">true</bool>

    <!-- Don't use roaming icon for considered operators -->
    <string-array translatable="false" name="config_operatorConsideredNonRoaming">
        <item>310</item>
        <item>311</item>
        <item>312</item>
        <item>313</item>
        <item>314</item>
        <item>315</item>
        <item>316</item>
    </string-array>

    <!-- Use roaming icon for considered operators -->
    <string-array translatable="false" name="config_operatorConsideredRoaming">
        <item>310110</item>
        <item>310140</item>
        <item>310400</item>
        <item>310470</item>
        <item>311170</item>
    </string-array>
</resources>
